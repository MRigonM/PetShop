@model IEnumerable<PetShop.Models.Location.CountryViewModel>

<div class="container-fluid">
    <h1 class="mt-4">Country Dashboard</h1>

    <div class="card">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Country List
            <a href="@Url.Action("CreateCountry", "Dashboard")" class="btn btn-primary btn-sm float-end">Add New Country</a>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Is Deleted</th>
                    <th>Deleted At</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var country in Model)
                {
                    <tr>
                        <td>@country.Id</td>
                        <td>@country.Name</td>
                        <td>@country.IsDeleted</td>
                        <td>@(country.DeletedAt?.ToString("g") ?? "N/A")</td>
                        <td>
                            <a href="@Url.Action("EditCountry", "Dashboard", new { id = country.Id })" class="btn btn-warning btn-sm">Edit</a>
                            <a href="@Url.Action("DeleteCountry", "Dashboard", new { id = country.Id })" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>